{
"compilerOptions": {
"baseUrl": ".",
"paths": {
"@/": ["src/"],
"@components/": ["src/components/"],
"@pages/": ["src/pages/"],
"@hooks/": ["src/hooks/"],
"@lib/": ["src/lib/"],
"@assets/": ["src/assets/"]
},
"jsx": "react-jsx",
"moduleResolution": "bundler",
"target": "ES2020",
"allowSyntheticDefaultImports": true,
"skipLibCheck": true,
"checkJs": false
},
"exclude": ["node_modules", "dist"]
}